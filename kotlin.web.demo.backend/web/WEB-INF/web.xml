<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>KotlinHttpServlet Backend Application</display-name>
    <description>

    </description>

    <servlet>
        <servlet-name>BackendHttpServlet</servlet-name>
        <servlet-class>org.jetbrains.webdemo.backend.BackendHttpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BackendHttpServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>20000</session-timeout>
    </session-config>


</web-app>
