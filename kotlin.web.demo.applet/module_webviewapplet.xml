    <patternset refid="excluded.from.module.webviewapplet"/>
  </patternset>
  
  <path id="webviewapplet.module.sourcepath">
    <dirset dir="kotlin.web.demo.applet">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.webviewapplet" depends="compile.module.webviewapplet.production,compile.module.webviewapplet.tests" description="Compile module WebViewApplet"/>
  
  <target name="compile.module.webviewapplet.production" depends="register.custom.compilers,compile.module.webview" description="Compile module WebViewApplet; production classes">
    <mkdir dir="${webviewapplet.output.dir}"/>
    <javac2 destdir="${webviewapplet.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.webviewapplet}/javac">
      <compilerarg line="${compiler.args.webviewapplet}"/>
      <bootclasspath refid="webviewapplet.module.bootclasspath"/>
      <classpath refid="webviewapplet.module.production.classpath"/>
      <src refid="webviewapplet.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.webviewapplet"/>
    </javac2>
    
    <copy todir="${webviewapplet.output.dir}">
      <fileset dir="kotlin.web.demo.applet/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.webviewapplet.tests" depends="register.custom.compilers,compile.module.webviewapplet.production" description="compile module WebViewApplet; test classes" unless="skip.tests"/>
  
  <target name="clean.module.webviewapplet" description="cleanup module">
    <delete dir="${webviewapplet.output.dir}"/>
    <delete dir="${webviewapplet.testoutput.dir}"/>
  </target>
